{
  "rules": {
    ".read": "auth != null",
    ".write": false,
    "user": {
      "$user_id": {
        ".read": true,
        "profile": {
          ".write": "$user_id === auth.uid"
        },
        "collection": {}
      }
    },
    "boss": {
      ".read": true
    },
    "job": {
      ".read": true
    },
    "collection": {
      ".read": true
    },
    "room-member": {
      ".read": true,
      "$room_id": {
        "host": {
          ".write": "!data.exists()"
        },
        "boss": {
          ".write": "!data.exists() && root.child('boss/' + data.val()).exists()"
        },
        "status": {
        },
        "member": {
          "$user_id": {
            ".write": "$user_id === auth.uid"
          }
        }
      }
    },
    "room": {
      "$room_id": {
        ".read": "root.child('room-member/' + $room_id + '/member/' + auth.uid).exists()",
        "boss": {
        },
        "send": {
          "$event_id": {
            ".write": "!data.exists() && root.child('room-member/' + $room_id + '/member/' + auth.uid).exists()"
          }
        },
        "receive": {}
      }
    }
  }
}
