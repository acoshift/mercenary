{
  "rules": {
    ".read": false,
    ".write": false,
    "event": {
      "$event_id": {
        ".write": "!data.exists()",
        "u": {
          ".validate": "newData.val() === auth.uid"
        },
        ".validate": "newData.hasChildren(['u'])"
      }
    },
    "user": {
      "$user_id": {
        ".read": true,
        "profile": {
          ".write": "$user_id === auth.uid"
        },
        "current-room": {
          ".write": "$user_id === auth.uid"
        },
        "collection": {}
      }
    },
    "boss": {
      ".read": true
    },
    "job": {
      ".read": true
    },
    "collection": {
      ".read": true
    },
    "room-member": {
      ".read": true,
      "$room_id": {
        ".write": "!data.exists() || (data.exists() && newData.val() === null && data.child('host').val() === auth.uid)",
        "host": {
          ".validate": "!data.exists() && newData.val() === auth.uid"
        },
        "boss": {
          ".validate": "!data.exists() && root.child('boss/' + newData.val()).exists()"
        },
        "member": {
          "$user_id": {
            ".write": "$user_id === auth.uid && !root.child('room/' + $room_id).exists()",
            ".validate": "$user_id === auth.uid && (newData.val() === null || root.child('job/' + newData.val()).exists())"
          }
        },
        ".validate": "newData.hasChildren(['host', 'boss', 'member'])"
      }
    },
    "room": {
      "$room_id": {
        ".write": "!data.exists() && root.child('room-member/' + $room_id + '/host').val() === auth.uid",
        ".read": "root.child('room-member/' + $room_id + '/member/' + auth.uid).exists()",
        "boss": {
          "id": {
            ".validate": "root.child('boss/' + newData.val()).exists()"
          }
        },
        "send": {
          "$event_id": {
            ".write": "!data.exists() && root.child('room-member/' + $room_id + '/member/' + auth.uid).exists()"
          }
        },
        "receive": {}
      }
    }
  }
}
